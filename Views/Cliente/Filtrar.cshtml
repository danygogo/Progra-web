@model IEnumerable<DesingYourParadise.Models.Cliente>

@{
    ViewData["Title"] = "Filtrar";
}

<h1>Filtrar</h1>

<form asp-controller="Cliente" asp-action="Filtrar" method="get">
    <p>
        Cédula: <input type="text" name="cedula" />
        <input type="submit" value="Filtrar" class="btn btn-primary" />
    </p>
</form>

@if (ViewBag.condicional == 1)
{
    <div class="alert alert-info"><p>Debe digitar una cédula existente</p></div>
    
}

@if (ViewBag.condicional == 2)
{
    <div class="alert alert-danger"><p>La cédula digitada no existe</p></div>
}

@if (ViewBag.condicional == 3)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cedula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cedula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.ActionLink("Editar Cliente", "Edit", new { identificacion = item.Cedula })
                    </td>
                </tr>
            }
        </tbody>
    </table>

}


